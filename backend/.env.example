# Application
APP_NAME="Risk Assessment API"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/risk_assessment

# S3/MinIO Object Storage
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=risk-assessment
S3_REGION=us-east-1

# Security (CHANGE IN PRODUCTION!)
API_KEY_PEPPER=change-me-in-production

# Public URL (for generating assessment links)
PUBLIC_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60

# Assessment defaults
ASSESSMENT_DEFAULT_EXPIRY_DAYS=30

# Upload limits
UPLOAD_MAX_SIZE_MB=5
UPLOAD_MAX_IMAGES_PER_QUESTION=3
